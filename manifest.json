{
  "description": "Applys a retro style to the WWW",
  "manifest_version": 2,
  "name": "Retro",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/borderify",
  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["retro.js"],
      "all_frames": true
    }
  ],

  "permissions": [    "<all_urls>"
  ]

}
